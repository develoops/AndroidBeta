<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >



    <Button

        android:layout_width="768dp"
        android:layout_height="wrap_content"
        android:id="@+id/acomodation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/eventoTerciario"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:shadowColor="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>




    <GridView

        android:id="@+id/gridView"
        android:numColumns="1"
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_below="@id/acomodation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"


        />

    <Button

        android:layout_width="768dp"
        android:layout_height="wrap_content"
        android:id="@+id/comercialmap"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@color/eventoTerciario"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:layout_below="@id/gridView"
        android:shadowColor="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>


</LinearLayout>